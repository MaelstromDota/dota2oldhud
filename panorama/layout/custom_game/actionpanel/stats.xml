<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/actionpanel/actionpanel.css" />
        <include src="file://{resources}/styles/custom_game/actionpanel/stats.css" />
        <include src="s2r://panorama/styles/dotastyles.vcss" />
		<include src="s2r://panorama/styles/custom_ui.vcss" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/actionpanel/stats.js" />
    </scripts>
    <Panel class="StatsClass">
        <Panel id="Stats">
            <Image id="damageicon" src="s2r://panorama/images/hud/hudv2_icondamage_png.vtex" onmouseover="ShowLeftStats()" onmouseout="HideLeftStats()">
                <Label id="damagetext" text="N/A" />
                <Label id="damagetextbonus" text="+ N/A" />
            </Image>
            <Image id="armoricon" src="s2r://panorama/images/hud/hudv2_iconarmor_png.vtex"/>
            <Label id="armortext" text="N/A" />
            <Label id="armortextbonus" text="+ N/A" />
            <Image id="speedicon" src="file://{images}/hud/icon_speed.png"/>
            <Label id="speedtext" text="N/A" />
            <Image id="stricon" src="file://{images}/hud/icon_str.png"/>
            <Label id="strtext" text="N/A" />
            <Image id="agiicon" src="file://{images}/hud/icon_agi.png"/>
            <Label id="agitext" text="N/A" />
            <Image id="inticon" src="file://{images}/hud/icon_int.png"/>
            <Label id="inttext" text="N/A" />
        </Panel>
        <Panel id="StatsBonus">
            <Label id="agitextbonus" text="+ N/A" />
            <Label id="strtextbonus" text="+ N/A" />
            <Label id="inttextbonus" text="+ N/A" />
        </Panel>
        <Panel id="SelectedUnits">
            <DOTAScenePanel class="hud" id="Portrait1" unit="npc_dota_hero_techies" onactivate="ClickPortrait('1')"/>
            <DOTAScenePanel class="hud" id="Portrait2" unit="npc_dota_hero_techies" onactivate="ClickPortrait('2')"/>
            <DOTAScenePanel class="hud" id="Portrait3" unit="npc_dota_hero_techies" onactivate="ClickPortrait('3')"/>
            <DOTAScenePanel class="hud" id="Portrait4" unit="npc_dota_hero_techies" onactivate="ClickPortrait('4')"/>
            <DOTAScenePanel class="hud" id="Portrait5" unit="npc_dota_hero_techies" onactivate="ClickPortrait('5')"/>
            <DOTAScenePanel class="hud" id="Portrait6" unit="npc_dota_hero_techies" onactivate="ClickPortrait('6')"/>
            <DOTAScenePanel class="hud" id="Portrait7" unit="npc_dota_hero_techies" onactivate="ClickPortrait('7')"/>
            <DOTAScenePanel class="hud" id="Portrait8" unit="npc_dota_hero_techies" onactivate="ClickPortrait('8')"/>
            <DOTAScenePanel class="hud" id="Portrait9" unit="npc_dota_hero_techies" onactivate="ClickPortrait('9')"/>
            <DOTAScenePanel class="hud" id="Portrait10" unit="npc_dota_hero_techies" onactivate="ClickPortrait('10')"/>
            <DOTAScenePanel class="hud" id="Portrait11" unit="npc_dota_hero_techies" onactivate="ClickPortrait('11')"/>
            <DOTAScenePanel class="hud" id="Portrait12" unit="npc_dota_hero_techies" onactivate="ClickPortrait('12')"/>
        </Panel>
    </Panel>
</root>